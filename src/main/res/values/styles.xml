    <style name="currentLocationStyle" parent="LabelStyle">
        <item name="mapIconImage">@drawable/red_dot_marker</item>
        <item name="mapIconAnchorX">0.5</item>
        <item name="mapIconAnchorY">0.5</item>
    </style>

    <style name="labelTextStyleRed" parent="LabelTextStyle">
        <item name="mapTextSize">32</item>
        <item name="mapTextColor">#EB3434</item>
        <item name="mapTextStrokeWidth">5</item>
        <item name="mapTextStrokeColor">@android:color/white</item>
    </style>

    <style name="labelTextStyleBlue" parent="LabelTextStyle">
        <item name="mapTextSize">32</item>
