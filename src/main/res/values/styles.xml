<resources>
    <!-- Base application theme. -->
    <style name="AppNoTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:visibility">visible</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="UnknownRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">26.0</item>
        <item name="mapLineColor">@color/route_unknown</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
        <item name="mapPatternImage">@drawable/route_pattern_arrow</item>
        <item name="mapDistance">16</item>
    </style>


