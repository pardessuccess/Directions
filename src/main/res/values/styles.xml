    </style>

    <style name="cubic_in_out_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">CubicInOut</item>
        <item name="startAlpha">0.7</item>
        <item name="endAlpha">0.3</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>

    <style name="cubic_in_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">CubicIn</item>
        <item name="startAlpha">0.7</item>
        <item name="endAlpha">0.0</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>

    <style name="linear_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">Linear</item>
        <item name="startAlpha">0.0</item>
        <item name="endAlpha">1.0</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>

    <style name="cubic_out_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">CubicOut</item>
        <item name="startAlpha">0.0</item>
        <item name="endAlpha">1.0</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>
</resources>